showMonthlyBand_1   = input(false,   title="",                             group="Monthly VWAP Settings",   inline="band_1m")
stdevMonthlyMult_1  = input(1.0,     title="Monthly Band Multiplier #1",   group="Monthly VWAP Settings",   inline="band_1m")
